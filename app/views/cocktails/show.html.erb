
<h1><%= Le @cocktail.name %></h1>
  <h2> La recette :</h2>
    <div class ="card" >
             <% @cocktail.doses.each do |dose| %>
                        <p><%= dose.description %></p>
                        <p><%= dose.ingredient.name %></p>
             <% end %>
    </div>


    <div class="container">
        <div class="row">
         <div class="col-xs-12 col-sm-10 col-sm-offset-1">
           <%= simple_form_for [@cocktail, @dose] do |f| %>s
                <%= f.association :ingredient %>
                %= f.input :description %>
                <%= f.submit class: 'btn btn-primary' %>
            <% end %>
          </div>
    </div>



 <%= link_to "Back to cocktails" , cocktails_path, class: 'btn btn-primary' %>
